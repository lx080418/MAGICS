{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./my_node_js",
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": [
    "my_node_js/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "assets",
    "vendor",
    "js",
    "css",
    "fonts",
    "images"
  ]
}